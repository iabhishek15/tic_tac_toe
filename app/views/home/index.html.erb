
<p id = "currentMoveNoti">Start New Game</p>

<div class = "container mt-5">
	<div class = "row">
		<div class = "col-5">
			<%= form_with url:gamelogic_path do |form| %>
				<div class ="leftOption">
					<%= form.submit 'Friends Online(Work In Progress)',class:'btn btn-warning m-2', id:'friendBtn',name:'friend', disabled:true%>
				</div>
			<% end %>		
			<%= form_with url:gamelogic_path do |form| %>
				<div class ="leftOption">
					<%= form.submit 'Computer',class:'btn btn-warning m-2', id:'computerBtn' %>
				</div>
			<% end %>		
			<%= form_with url:gamelogic_path do |form| %>
				<div class ="leftOption">
					<%= form.submit '1 vs 1(offline)',class:'btn btn-warning m-2', id:'offlineBtn'%>
				</div>
			<% end %>	
				<div class ="leftOption">
					<button class = "btn btn-warning m-2" id = "restart">Restart</button>
				</div>
		</div>
		<div class = "col-5">
			<div class = "row" id = "grid">
				<div class = 'col-4 gl cell0' id ='0'></div>
				<div class = 'col-4 gl cell1' id ='1'></div>
				<div class = 'col-4 gl cell2' id ='2'></div>
				<div class = 'col-4 gl cell3' id ='3'></div>
				<div class = 'col-4 gl cell4' id ='4'></div>
				<div class = 'col-4 gl cell5' id ='5'></div>
				<div class = 'col-4 gl cell6' id ='6'></div>
				<div class = 'col-4 gl cell7' id ='7'></div>
				<div class = 'col-4 gl cell8' id ='8'></div>
			</div>
		</div>
	</div>
</div>

<style>
	.leftOption {
		right: 10% !important;
	}
	#grid {
		height: 360px;
		background-color: white;
		box-shadow: -4px 4px 4px 4px darkgrey;
	}
	.gl {
		font-size: 80px;
		text-align: center;
		height: 120px;
	}
	.gl:hover {
	  background-color: lightgrey;
	  transition: background-color .5s;
	  cursor: pointer;
	}
	.cell0, .cell3, .cell6, .cell1, .cell4, .cell7 {
		border: solid black;
		border-width:0px 1px 1px 0px;
	}
	.cell2, .cell5 {
		border: solid black;
		border-width:0px 0px 1px 0px;
	}
	.cell6  {
		border: solid black;
		border-width:0px 1px 0px 0px;
	}
	.cell7  {
		border: solid black;
		border-width:0px 1px 0px 0px;
	}
	p {
		text-align: center;
		color: red;
		font-size: 30px;
	}
</style>












